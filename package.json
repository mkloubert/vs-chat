{
  "name": "vs-chat",
  "displayName": "Chat",
  "description": "A XMPP (Jabber) based chat system.",
  "version": "0.0.8",
  "publisher": "mkloubert",
  "engines": {
    "vscode": "^1.5.0"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "keywords": [
    "Chat",
    "Jabber",
    "XMPP",
    "Client",
    "Server"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.chat.closeConnections",
        "title": "Close connection(s)",
        "category": "Chat"
      },
      {
        "command": "extension.chat.connectTo",
        "title": "Connect to server",
        "category": "Chat"
      },
      {
        "command": "extension.chat.deleteSettings",
        "title": "Delete settings",
        "category": "Chat"
      },
      {
        "command": "extension.chat.startServer",
        "title": "Start server",
        "category": "Chat"
      },
      {
        "command": "extension.chat.stopServer",
        "title": "Stop server",
        "category": "Chat"
      }
    ],
    "configuration": {
      "properties": {
        "chat": {
          "type": "object",
          "properties": {
            "domain": {
              "default": "The name of the server's domain.",
              "type": "string"
            },
            "port": {
              "description": "The TCP port the XMPP server should run on.",
              "type": "integer",
              "minimum": 0,
              "maximum": 65535,
              "default": 5222
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32",
    "@types/node-xmpp-client": "^3.1.0"
  },
  "icon": "icon.png",
  "author": {
    "name": "Marcel Joachim Kloubert"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mkloubert/vs-chat"
  },
  "bugs": {
    "url": "https://github.com/mkloubert/vs-chat/issues"
  },
  "readmeFilename": "README.md",
  "dependencies": {
    "moment": "^2.17.1",
    "node-xmpp": "^1.0.8"
  }
}
